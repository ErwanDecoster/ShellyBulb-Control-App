<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href= "/stylesheets/main.css" rel="stylesheet" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap"
    rel="stylesheet"
  />
  <title>Shelly Bulb</title>
</head>
<body class="dark-theme || light-theme">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="main-container">
    <div class="device-container">
      <% shellys.sort((a, b) => a.id - b.id).forEach(device => { %>
        <a href="shellybulb/<%= device.id %>">  
            <div class="device" style="background-color: rgb(<%= device.red %>, <%= device.green %>, <%= device.blue %>)">
                <div class="inner-device prevent-select">                    
                  <img class="image-bulb" src="/img/light-bulb-part-2-svgrepo-com.svg" alt="bulb"> 
                  <p><%= device.ip %></p> 
                </div> 
            </div> 
        </a>
      <% }); %>
      <button class="device prevent-select" onclick="createDevice()">
        <div class="inner-device prevent-select">
          <svg width="42" height="42" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 21H29.5M21 21V12.5M21 21H12.5M21 21V29.5M21 2C31.4934 2 40 10.5066 40 21C40 31.4934 31.4934 40 21 40C10.5066 40 2 31.4934 2 21C2 10.5066 10.5066 2 21 2Z" stroke="black" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>  
          <p>Add a device</p>
        </div>
      </button>
    </div>

    
      <div class="overlay"></div>

      <div class="create-device">
        <form action="/devices" method="POST">
          <div>
            <label for="ip">IP Address:</label>
            <input type="text" id="ip" name="ip" maxlength="25" required>
          </div>
          <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" maxlength="30" required>
          </div>
          <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" maxlength="30" required>
          </div>
          <button type="submit">Add device</button>
        </form>
      </div>
    
    </div>
</div>
</main>

<script src="/scripts/main-script.js"></script>

</body>